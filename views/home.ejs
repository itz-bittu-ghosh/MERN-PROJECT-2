<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      // Enable dark mode via class
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {},
        },
      };
    </script>
  </head>

  <body class="bg-gray-100 dark:bg-gray-900 flex flex-col min-h-screen ">
    <%- include('partials/nav') %>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col items-center justify-start p-4 space-y-6 mt-12">
      <% allPosts.reverse().forEach(function(post) { %>

      <div
        class="bg-white dark:bg-gray-800 rounded-lg shadow-lg w-[600px]  overflow-hidden mt-4"
      >
        <!-- Post Header -->
        <div class="flex items-center px-4 py-3">
          <img
            class="h-10 w-10 rounded-full object-cover"
            src="profileImages/<%= post.user.photo %>"
            alt="User profile"
          />
          <div class="ml-3">
            <h2 class="text-gray-800 dark:text-gray-100 font-semibold">
              <a href="/profile/<%= post.user._id %>">
                @<%= post.user.firstName.toLowerCase() %>
              </a>
            </h2>
            <p class="text-gray-500 dark:text-gray-400 text-sm">
              <%= post.date.toDateString() %>
            </p>
          </div>
        </div>
        <!-- Post Image -->
        <img
          class="w-full h-64 object-cover"
          src="profileImages/<%= post.photo %>"
          alt="Post photo"
        />
        <!-- Post Body -->
        <div class="px-4 py-3">
          <p class="text-gray-700 dark:text-gray-300 text-sm">
            <%= post.about %>
          </p>
        </div>
        <!-- Post Actions -->
        <div
          class="px-4 py-2 flex items-center space-x-4 border-t dark:border-gray-700"
        >
          <a
            href="/like-post/<%= post._id %>"
            class="likeBtn flex items-center text-gray-600 dark:text-gray-300 hover:text-red-500 transition cursor-pointer"
          >
            ❤️
            <span class="likeCount ml-1"><%= post.likedUserId.length %></span>
          </a>
        </div>
      </div>
      <% }) %>
    </main>

    <script>
      // Dark mode
      if (localStorage.getItem("darkMode") === "enabled") {
        document.documentElement.classList.add("dark");
      }
      const toggle = document.getElementById("darkToggle");
      if (toggle) {
        toggle.addEventListener("click", () => {
          document.documentElement.classList.toggle("dark");
          if (document.documentElement.classList.contains("dark")) {
            localStorage.setItem("darkMode", "enabled");
          } else {
            localStorage.setItem("darkMode", "disabled");
          }
        });
      }
    </script>
  </body>
</html>

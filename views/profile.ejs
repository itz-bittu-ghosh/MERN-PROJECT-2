<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <title>My Posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = { darkMode: "class", theme: { extend: {} } };
    </script>
  </head>

  <body class="bg-gray-100 dark:bg-gray-900 flex flex-col min-h-screen">
    <!-- Navbar -->
    <%- include('partials/nav') %>

    <!-- Main Content -->
    <main
      class="flex-1 flex flex-col items-center justify-start p-4 space-y-6 w-full mt-12"
    >
      <!-- Profile Info -->
      <div
        class="bg-white dark:bg-gray-800 p-8 rounded shadow-md w-full max-w-2xl mt-4  flex flex-col items-center"
      >
        <!-- Profile Photo -->
        <img
          src="/profileImages/<%= user.photo %>"
          alt="Profile Photo"
          class="w-full h-[200px]  object-cover shadow-md rounded-[10px]"
        />
        <!-- Name -->
        <h2 class="mt-4 text-2xl font-bold text-gray-800 dark:text-gray-100">
          <%= user.firstName %> <%= user.lastName %>
        </h2>
        <!-- Email -->
        <p class="text-gray-600 dark:text-gray-300 mt-2">
          📧 <%= user.email %>
        </p>
        <!-- Date Joined -->
        <p class="text-gray-500 dark:text-gray-400 mt-1 text-sm">
          🗓 <%= user.date.toDateString() %>
        </p>
        <p class="text-gray-500 dark:text-gray-400 mt-1 text-sm">
          📌Total Posts: <%= userPosts.length %>
        </p>
      </div>

      <!-- Posts Section -->
      <div class="w-full max-w-2xl space-y-6">
        <% userPosts.reverse().forEach(post => { %>
        <div
          class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden"
        >
          <div class="flex items-center px-4 py-3">
            <img
              class="h-10 w-10 rounded-full object-cover"
              src="/profileImages/<%= user.photo %>"
              alt="User profile"
            />
            <div class="ml-3">
              <h2 class="text-gray-800 dark:text-gray-100 font-semibold">
                @<%= user.firstName.toLowerCase() %>
              </h2>
              <p class="text-gray-500 dark:text-gray-400 text-sm">
                🗓 <%= post.date.toDateString() %>
              </p>
            </div>
          </div>
          <img
            class="w-full h-64 object-cover"
            src="/profileImages/<%= post.photo %>"
            alt="Post photo"
          />
          <div class="px-4 py-3">
            <p class="text-gray-700 dark:text-gray-300 text-sm">
              <%= post.about %>
            </p>
          </div>
          <div
            class="px-4 py-2 flex items-center space-x-4 border-t dark:border-gray-700"
          >
      <a
            href="/like-post/<%= post._id %>?likedFromProfile=ture"
            class="likeBtn flex items-center text-gray-600 dark:text-gray-300 hover:text-red-500 transition cursor-pointer"
          >
            ❤️ <span class="likeCount ml-1"><%= post.likedUserId.length%></span>
          </a>
          </div>
        </div>
        <% }) %>
      </div>
    </main>

    <!-- Dark mode toggle -->
    <script>
      if (localStorage.getItem("darkMode") === "enabled") {
        document.documentElement.classList.add("dark");
      }
      const toggle = document.getElementById("darkToggle");
      if (toggle) {
        toggle.addEventListener("click", () => {
          document.documentElement.classList.toggle("dark");
          if (document.documentElement.classList.contains("dark")) {
            localStorage.setItem("darkMode", "enabled");
          } else {
            localStorage.setItem("darkMode", "disabled");
          }
        });
      }
    </script>
  </body>
</html>
